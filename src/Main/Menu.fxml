<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<BorderPane fx:id="root" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/10.0.2-internal"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="Main.Controller">
    <center>
        <StackPane>
            <VBox fx:id="menuRoot" alignment="CENTER" prefHeight="200.0" prefWidth="100.0" spacing="25"
                  BorderPane.alignment="CENTER">
                <Label alignment="CENTER" text="Tic Tac Toe" textAlignment="CENTER" textFill="orange">
                    <font>
                        <Font name="Comic Sans MS" size="40.0"/>
                    </font>
                </Label>
                <Button maxWidth="200.0" minWidth="200.0" mnemonicParsing="false" onAction="#startSinglePlayer"
                        text="Singleplayer">
                    <font>
                        <Font size="20.0"/>
                    </font>
                </Button>
                <Button maxWidth="200.0" minWidth="200.0" mnemonicParsing="false" onAction="#startMultiPlayer"
                        text="Multiplayer">
                    <font>
                        <Font size="20.0"/>
                    </font>
                </Button>
            </VBox>
            <GridPane fx:id="gameRoot" alignment="CENTER"/>
            <VBox fx:id="endScreenRoot" alignment="CENTER" spacing="25">
                <Label fx:id="winLabel" alignment="CENTER" textAlignment="CENTER" textFill="orange">
                    <font>
                        <Font name="Comic Sans MS" size="40.0"/>
                    </font>
                </Label>
                <Button maxWidth="200.0" minWidth="200.0" mnemonicParsing="false" onAction="#rematch"
                        text="Rematch">
                    <font>
                        <Font size="20.0"/>
                    </font>
                </Button>
                <Button maxWidth="200.0" minWidth="200.0" mnemonicParsing="false" onAction="#backToMenu"
                        text="Back to main menu">
                    <font>
                        <Font size="20.0"/>
                    </font>
                </Button>
            </VBox>
        </StackPane>
    </center>
</BorderPane>
